@model IEnumerable<Library10.Models.Shelf>

@{
    ViewData["Title"] = "מדפים";
    
}


@if(ViewBag.CurrLibId!=0)
{
    <h1> מדפים בספרייה זו</h1>
    <a asp-controller="Shelves" asp-action="Create" asp-route-libId=@ViewBag.CurrLibId asp-route-libName=@ViewBag.CurrLibName>הוסף מדף חדש לספרייה זו</a>
}
else
{
    <h1>מדפים</h1>
<p>
    <a asp-action="Create">הוסף מדף חדש</a>
</p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShelfId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Library)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShelfHeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShelfWidth)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
           
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShelfId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Library.LibraryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShelfHeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShelfWidth)
            </td>
            
            <td>
                @* <a asp-action="Edit" asp-route-id="@item.ShelfId">Edit</a> | *@
                    @* <a asp-action="Delete" asp-route-id="@item.ShelfId">Delete</a> *@
