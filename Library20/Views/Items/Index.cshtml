@model IEnumerable<Library10.Models.Item>

@{
    ViewData["Title"] = "ספרים";
    int freeSpace = ViewBag.Width;
}


@if (ViewBag.CurrSlfId == 0)
{
    <h1>ספרים</h1>
    <p>
        <a asp-action="Create" asp-route-one=@true>הוסף ספר חדש</a>
    </p>
    <p>
        <a asp-action="Create" asp-route-one=@false>הוסף סט ספרים חדש</a>
    </p>
}
else
{
    <h1>ספרים במדף זה</h1>
    @* <h6>@freeSpace</h6> *@

    <p>
        <a asp-action="Create" asp-route-slfId=@ViewBag.CurrSlfId asp-route-one =@true>הוסף ספר חדש למדף זה</a>
    </p>
    <p>
        <a asp-action="Create" asp-route-slfId=@ViewBag.CurrSlfId asp-route-one =@false>הוסף סט ספרים חדש למדף זה</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Shelf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shelf.Library.LibraryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookHeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookWidth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pieces)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Shelf.ShelfId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shelf.LibraryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookHeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookWidth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pieces)
            </td>
            <td>
                @* <a asp-action="Edit" asp-route-id="@item.ItemId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ItemId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ItemId">Delete</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
